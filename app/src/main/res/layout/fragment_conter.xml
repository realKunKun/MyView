<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ConterFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.example.myview.View.StepView
                android:id="@+id/step_View"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:borderWith="10dp"
                app:inner_color="@color/purple_500"
                app:outer_color="@color/teal_200"
                app:step_text_color="@color/purple_200"
                app:step_text_size="50sp" />

            <EditText
                android:id="@+id/counterEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:minHeight="48dp"
                android:selectAllOnFocus="true"

                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>